@page
@model Project.Pages.Admin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Interesting? *@
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Type" class="control-label"></label>
                <input asp-for="Product.Type" class="form-control" />
                <span asp-validation-for="Product.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.UnitPrice" class="control-label"></label>
                <input asp-for="Product.UnitPrice" class="form-control" />
                <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.QtyInStock" class="control-label"></label>
                <input asp-for="Product.QtyInStock" class="form-control" />
                <span asp-validation-for="Product.QtyInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Current Image</label>
                @if (!string.IsNullOrEmpty(Model.Product.ImageUri))
                {
                    <img src="@Model.Product.ImageUri" alt="Current Image" width="300" height="165" class="mb-2" />
                }
            </div>
            <div class="form-group mb-2">
                <input asp-for="@Model.Upload" type="file" class="form-control" accept=".jpg, .png" />
                <span asp-validation-for="@Model.Upload" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
